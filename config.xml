<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sptg.phonegappush" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PhonegapPush</name>
    <description>
        Push sample application that receives push notifications.
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        PhoneGap Team
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-8.1.1" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="handset" />
    <preference name="exit-on-suspend" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="detect-data-types" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="splashscreen" value="screen" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-targetSdkVersion" value="27" />
    <preference name="android-minSdkVersion" value="15" />

    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.3" />
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <plugin name="phonegap-plugin-push" source="npm" spec="2.0.0" />

    <platform name="android">
        <resource-file src="google-services.json" target="app/google-services.json" />
    </platform>
    <platform name="ios">
        <resource-file src="GoogleService-Info.plist" />
    </platform>

    <gap:splash density="port-hdpi" gap:platform="android" src="android/hdpi.png" />
    <gap:splash density="port-xhdpi" gap:platform="android" src="android/xhdpi.png" />
    <gap:splash density="port-xxhdpi" gap:platform="android" src="android/xxhdpi.png" />
    <splash height="480" platform="ios" src="ios/Default.png" width="320" />
    <splash height="960" platform="ios" src="ios/Default@2x.png" width="640" />
    <splash height="1136" platform="ios" src="ios/Default-568h@2x.png" width="640" />
    <splash height="1334" platform="ios" src="ios/Default-667h@2x.png" width="750" />
    <splash height="2208" platform="ios" src="ios/Default-Portrait-736h@3x.png" width="1242" />
    <splash src="splash.png" />
    <icon gap:platform="ios" height="60" src="ios/icon-60.png" width="60" />
    <icon gap:platform="ios" height="120" src="ios/icon-60@2x.png" width="120" />
    <icon gap:platform="ios" height="180" src="ios/icon-60@3x.png" width="180" />
    <icon gap:platform="ios" height="72" src="ios/icon-72.png" width="72" />
    <icon gap:platform="ios" height="144" src="ios/icon-72@2x.png" width="144" />
    <icon gap:platform="ios" height="76" src="ios/icon-76.png" width="76" />
    <icon gap:platform="ios" height="152" src="ios/icon-76@2x.png" width="152" />
    <icon gap:platform="ios" height="40" src="ios/icon-small-40.png" width="40" />
    <icon gap:platform="ios" height="80" src="ios/icon-small-40@2x.png" width="80" />
    <icon gap:platform="ios" height="120" src="ios/icon-small-40@3x.png" width="120" />
    <icon gap:platform="ios" height="50" src="ios/icon-small-50.png" width="50" />
    <icon gap:platform="ios" height="100" src="ios/icon-small-50@2x.png" width="100" />
    <icon gap:platform="ios" height="27" src="ios/ios/icon-small.png" width="29" />
    <icon gap:platform="ios" height="58" src="ios/ios/icon-small@2x.png" width="58" />
    <icon gap:platform="ios" height="87" src="ios/ios/icon-small@3x.png" width="87" />
    <icon gap:platform="ios" height="57" src="ios/icon.png" width="57" />
    <icon gap:platform="ios" height="114" role="default" src="ios/icon@2x.png" width="114" />
    <icon gap:platform="android" gap:qualifier="mdpi" height="48" src="android/48.png" width="48" />
    <icon gap:platform="android" gap:qualifier="hdpi" height="72" src="android/72.png" width="72" />
    <icon gap:platform="android" gap:qualifier="xhdpi" height="96" src="android/96.png" width="96" />
    <icon gap:platform="android" gap:qualifier="xxhdpi" height="144" src="android/144.png" width="144" />
    <icon gap:role="default" src="android/96.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
